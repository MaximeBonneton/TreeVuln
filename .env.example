# PostgreSQL (superuser — utilisé uniquement pour la gestion de schéma)
POSTGRES_USER=treevuln
POSTGRES_PASSWORD=
POSTGRES_DB=treevuln
# IMPORTANT : Générer un mot de passe fort :
#   python -c "import secrets; print(secrets.token_urlsafe(24))"

# Rôle applicatif (least-privilege, utilisé par le backend)
# Si APP_DB_PASSWORD est vide, le backend utilise le superuser (non recommandé)
APP_DB_USER=treevuln_app
APP_DB_PASSWORD=
# Générer avec : python -c "import secrets; print(secrets.token_urlsafe(24))"

# Backend
# Si APP_DB_PASSWORD est défini, utiliser l'URL avec le rôle applicatif :
# DATABASE_URL=postgresql+asyncpg://${APP_DB_USER}:${APP_DB_PASSWORD}@db:5432/${POSTGRES_DB}
# Sinon, utiliser le superuser (dev uniquement) :
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
DEBUG=false

# Clé d'administration (OBLIGATOIRE en production, ignorée si DEBUG=true)
# Utilisée pour : authentification API, chiffrement des secrets webhook, sessions
# Générer avec : python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_API_KEY=

# CORS (origines séparées par des virgules)
ALLOWED_ORIGINS=https://localhost:3000
